<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{mm:ss} %-5p %C{4} %F:%L- %m%n" />
            <!--PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/-->
        </Console>
        <RollingFile name="LOG_FILE" fileName="${sys:log.base}/logs/logs.log" filePattern="${sys:log.base}/logs/%d{MM-dd-yy-HH-mm-ss}-%i.log">
            <PatternLayout pattern="%d{mm:ss} %-5p %C{4} %F:%L- %m%n" />
            <!--PatternLayout pattern="%d %-5p [%t] [%C{6}] (%F:%L) - %m%n" /-->
            <Policies>
                <SizeBasedTriggeringPolicy size="3 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="org.gluu" level="DEBUG">
            <AppenderRef ref="LOG_FILE" />
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>

</Configuration>